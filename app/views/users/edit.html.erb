<!DOCTYPE html>
<html>
<body>
<div class="error-msg">
	<% if @user.errors.any? %>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
</div>
<%= form_for(@user) do |f| %>
	<div class = "field">
		<p>Name</p>
		<%= f.text_field :name %>
	</div>
	<div class = "field">
		<p>Email</p>
		<%= f.text_field :email %>
	</div>
	<div class = "field">
		<p>Password</p>
		<%= f.text_field :password %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
</body>
</html>