<!DOCTYPE html>
<html>
<head><link rel="stylesheet" type="text/css" href="../assets/addresses.css.scss"></head>
<body>
	<ul class = "navbar">
			<li class="nav-li", "addresses"><a href="/addresses">Contacts</a></li>
			<li class="nav-li", "tasklists"><a href="/tasklists">To-Do List</a></li>
			<li class="nav-li", "newaddress"><a href="/addresses/new">Add Contact</a></li>
			<li class="nav-li", "newtasklist"><a href="/tasklists/new">Add Task</a><li>
			<% if user_signed_in? %>
			<li class = "nav-li", "logout"><%= link_to('Logout', destroy_user_session_path,:method => :delete) %></li>
			<% else %>
			<li class="nav-li", "logout"><%= link_to('Login', new_user_session_path) %></li>
			<% end %>
		</ul>
	<div class="error-msg">
	<% if @address.errors.any? %>
		<ul>
			<% @address.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	</div>
	<br>
	<div class = "center">
		<%= form_for(@address) do |f| %>
			<div class = "field">
				<p>Name:</p>
				<%= f.text_field :friend%>
			</div>
			<div class="field">
				<p>House Number:</p>
				<%= f.text_field :number%>
			</div>
			<div class="field">
				<p>Street Name:</p>
				<%= f.text_field :street%>
			</div>
			<div class="field">
				<p>City:</p>
				<%= f.text_field :city%>
			</div>
			<div class="field">
				<p>State:</p>
				<%= f.text_field :state%>
			</div>
			<div class="field">
				<p>Zip Code:</p>
				<%= f.text_field :zip%>
			</div>
			<div class="field"> 
				<p>Phone Number:</p>
				<%= f.telephone_field :phone%>
			</div>
			<div class="field">
				<%= f.hidden_field :user_id, :value =>current_user.id%>
			</div>
			<div class="actions">
				<%= f.submit "Create Contact" %>
			</div>
		<% end %>
	</div>
</body>
</html>