<body>
	<% if user_signed_in? %>
		<ul class = "navbar">
			<li class="nav-li"><a href="/addresses">Contacts</a></li>
			<li class="nav-li"><a href="/tasklists">To-Do List</a></li>
			<li class="nav-li"><a href="/addresses/new">Add Contact</a></li>
			<li class="nav-li"><a href="/tasklists/new">Add Task</a><li>
			<% if user_signed_in? %>
			<li class = "nav-li"><%= link_to('Logout', destroy_user_session_path,:method => :delete) %></li>
			<% else %>
			<li class="nav-li"><%= link_to('Login', new_user_session_path) %></li>
			<% end %>
		</ul>
	<% end %>
	<div class = "center">
		<table>
			<tr>
				<td>Task</td>
				<td>Finish By...</td>
			</tr>
			<% @tasklists.each do |tasklist| %>
			<tr>
				<td><%= tasklist.title %></td>
				<td><%= tasklist.duedate %></td>
				<td><%= link_to "View Task", tasklist_path(tasklist.id) %></td>
				<td><%= link_to "Edit Task", edit_tasklist_path(tasklist.id) %> </td>
				<td><%= button_to "Remove Task", tasklist, method: :delete %></td>
			</tr>
			<% end %>
		</table>
	</div>
</body>